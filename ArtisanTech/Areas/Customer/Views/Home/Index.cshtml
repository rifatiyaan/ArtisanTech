@model IEnumerable<Product>

<div class="row pb-3">
	@foreach(var p in Model)
	{
		<div class="card m-2" style="width:18rem;">
			<div class="d-flex flex-column">
			<div class="row mb-2" style="height:13rem">
			<img src=@p.ImageUrl>
			</div>
			<div class="card-body border-2 col-sm" style="height:12rem">
				<h5 class="card-title">@p.Name</h5>
				<p class="card-text">@p.Price</p>
				<a asp-action="Details" asp-route-id="@p.Id" class="btn btn-primary">See details</a>
				
			</div>
			</div>
		</div>
	}
</div>