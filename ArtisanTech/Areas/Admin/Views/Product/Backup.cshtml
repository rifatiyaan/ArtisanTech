@model List<Product>

<div class="container">
	<div class="row my-4">

		<div class="col-6">
			<h2 class="text-primary">
				Product List
			</h2>
		</div>

		<div class="col-6 text-end">
			<a asp-controller="Product" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-square-fill"></i>
				Create New Product
			</a>
		</div>

	</div>

	<div class="container text-center">
		<div class="row">

			@foreach (var obj in Model.OrderBy(x => x.Price))
			{
				<div class="col">
					<div class="card" style="width: 18rem; height:20rem">
						<img src="..." class="card-img-top" alt="...">

						<div class="card-body">
							<h5 class="card-title">@obj.Name</h5>
							<p class="card-text">@obj.Company</p>
							<div class="">
								<a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-outline-primary">
									<i class="bi-pencil-square"></i> Edit
								</a>

								<a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-outline-danger">
									<i class="bi bi-trash"></i> Delete
								</a>
							</div>
						</div>

					</div>
				</div>
			}

		</div>
	</div>
</div>






